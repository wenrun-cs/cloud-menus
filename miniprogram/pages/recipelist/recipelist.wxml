 <!-- 判断是否有菜谱 -->
 <!-- 有菜谱时显示的内容 -->
 <view class="hot-recipe-lists">
 	<!-- 菜谱列表 -->
 	<view class='hot-recipe-list' wx:for="{{slist}}" wx:key="_id" id='{{item._id}}' bindtap="todetail">
 		<!-- 菜谱图片 -->
 		<view class="recipeimage">
 			<image src="{{item.filelds[0]}}"></image>
 		</view>
 		<!-- 菜谱信息 -->
 		<view class="recipeinfo">
 			<!-- 菜谱名称 -->
 			<view class="recipename">
 				<text>{{item.menuName}}</text>
 			</view>
 			<view class="recipefooter">
 				<!-- 几星图片 ， 推荐度（关注度） / 2 来做 -->
 				
 					<!-- 关注不足2个，没有星星  {{ item.tjcp/3 < 1 }}-->
					<!-- 关注大于2个，小于6个，1个星星  {{ item.tjcp/3 >= 1 && item.tjcp/3 < 2 }}-->
					<!-- 以此类推，小星星 {{ item.tjcp/3 >= 2 && item.tjcp/3 < 3 }} -->
				<!-- <view class="xingxing">	
 					<block>
 						<image wx:for="{{ [1,2] }}" src="/static/index/xingxing1.png"></image>
 					</block>
 					<block>
 						<image wx:for="{{ [1,2,3] }}" src="/static/index/xingxing0.png"></image>
 					</block>
 				</view> -->
                 <!-- 星星 -->
				 <van-rate 
                           value="{{(item.follows)/2}}"
                           size="{{ 20 }}"
                           color="#F4EA2A"
						   readonly='true'
                           void-color="#BFBFBF"
                           void-icon="star"
                />
 				<!-- 菜谱发布人信息 -->
 				<view class="recipedetail">
 					<image class="usernameimage" src="{{item.avatarUrl}}"></image>
 					<text>{{item.nickName}}</text>
 					<image class="tjimage" src="/static/index/tj.png"></image>
 					<text>{{item.follows}}</text>
 					<image class="hotimage" src="/static/index/hot.png"></image>
 					<text>{{item.views}}</text>
 				</view>
 			</view>

 		</view>
 	</view>
 </view>
 <!-- 没有菜谱时显示的内容 -->
 <view class="tips" wx:if="{{slist.length==0}}">
 	暂时还没有朋友发布菜谱哦！！！
 </view>
 <!-- 滚动获取数据时，数据不够的情况 -->
 <view class="tips">
 	已经没有数据啦！！！
 </view>